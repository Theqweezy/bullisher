<h1>Listing ideas</h1>



  <div id="ideas">
    <% @ideas.each do |idea| %>
      <tr>
        <div><%= link_to idea.description, idea %>
        <% if idea.user = current_user %>
          <td><%= link_to 'Edit', edit_idea_path(idea) %></td>
          <td><%= link_to 'Destroy', idea, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %></div>
      </tr>
    <% end %>
  </div>


<br>

